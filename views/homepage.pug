extends layout

block css
	link(rel='stylesheet', type='text/css', href='/stylesheets/homepage.css')

block content
	// Navbar
	.container-fluid
		header
			nav#navbar.row
				.col-xs-3.text-center
					a(href='/')
						img#logo(src='/images/bwild_logo.svg', alt='BWild logo')
				ul#links.col-xs-2.list-inline.text-left
					li.list-inline-item
						a(href='https://www.facebook.com/wildcodeschool/', target="_blank")
							i.fa.fa-facebook-official(aria-hidden='true')
					li.list-inline-item
						a(href='https://twitter.com/wildcodeschool', target="_blank")
							i.fa.fa-twitter(aria-hidden='true')
					li.list-inline-item
						a(href='https://www.instagram.com/wildcodeschool/?hl=fr', target="_blank")
							i.fa.fa-instagram(aria-hidden='true')
				ul#profile.list-inline.col-xs-3.text-center
					li.list-inline-item
						img(src='http://via.placeholder.com/50x50', alt='Other')
					li.list-inline-item
						a(href="" ) #First name + #Last name
				ul#others.list-inline.col-xs-3.text-center
					li.list-inline-item
						img(src='http://via.placeholder.com/50x50', alt='Other')
					li.list-inline-item
						a(href="" ) Discover Wildmates
				ul#logout.list-inline.col-xs-1.text-center
					a(href="" class="btn") Logout
			#line.row
				.col-xs-12.text-center
					hr

		section#main
			.row
				h2#welcome.col-xs-12.text-center

			div#birthdays
				.container
					.row
						h3.text-center ★ Birthdays ★
					.row
						p= person.birthday
						p= person.firstname
			div#weather
				.container
					.row
						h3.text-center ★ Weather ★
			div#quote
				.container
					.row
						h3.text-center ★ Quote of the day ★
			div#plans
				.container
					.row
						h3.text-center ★ Wild Good plans ★
						p map
			div#insta
				.container
					.row
						h3.text-center ★ Latest BWild Instagram pics !! ★
					.row
						#instafeed.col-xs-12